{
  "name": "bissel-modern",
  "version": "1.0.0",
  "description": "> A modern rewrite of the Bissel Discord bot for Remnant D&D Discord Server.  \r > Rebuilt on the latest Discord.js with updated configs, typed personality strings, and long-term maintainability in mind.",
  "main": "src/client.ts",
  "type": "module",
  "directories": {
    "doc": "docs"
  },
  "scripts": {
    "dev": "tsx watch src/core/bot.ts",
    "build": "tsc",
    "strings:smoke": "tsx src/scripts/strings-smoke.ts",
    "deploy:dev": "tsx src/scripts/register-commands.ts",
    "deploy:list": "tsx src/scripts/register-commands.ts --list",
    "deploy:clear:global": "tsx src/scripts/register-commands.ts --clear-global",
    "deploy:global": "cross-env DEV_GUILD_ID= tsx src/scripts/register-commands.ts",
    "prestart": "npm run build",
    "start": "node dist/core/bot.js",
    "db:init": "tsx src/scripts/init.db.ts",
    "db:wipe": "tsx src/scripts/wipe.ts",
    "db:seed:me": "tsx src/scripts/seed.me.ts",
    "db:reseed:me": "npm run db:wipe && npm run db:seed:me",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [],
  "author": "Donovan Townes",
  "license": "ISC",
  "dependencies": {
    "better-sqlite3": "^12.4.1",
    "discord.js": "^14.22.1",
    "dotenv": "^17.2.2",
    "prettier": "^3.6.2",
    "sqlite": "^5.1.1",
    "sqlite3": "^5.1.7"
  },
  "devDependencies": {
    "@eslint/js": "^9.36.0",
    "@types/node": "^24.5.2",
    "eslint": "^9.36.0",
    "globals": "^16.4.0",
    "jiti": "^2.6.0",
    "tsx": "^4.20.6",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.44.1"
  }
}
